<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical" >
	
	<com.bbm.dhian.textColor.SlideMenu
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/slide_menu_item_title"
		android:textSize="20sp"
		android:text="Slide Menu Title" />
	
	<com.bbm.dhian.textColor.SlideMenu
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/slide_menu_item_subTitle"
		android:textSize="16sp"
		android:text="Slide Menu Subtitle" />
	
	<com.bbm.dhian.textColor.ChatDate
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/message_date"
		android:textSize="25sp"
		android:text="Chat Date" />

	<com.bbm.ui.CustomFontTextView
	
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Custom Font TextView" />
	<com.bbm.ui.CustomFontButton
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/button1"
		android:text="Go Pref" />
	
	<com.bbm.ui.CustomFontButton
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/button2"
		android:onClick="Restart"
		android:text="Restart" />
	<com.bbm.ui.CustomFontSwitch
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="Switch Custom Font Test" />

</LinearLayout>

